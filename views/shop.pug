extends base

block header
  include navigation

block content
  section.section.products.sale
    h2.heading-secondary.text-center= title
    .products__container
      each product in products
        .products__item
          .products__image
            a(href=`/product/${product.slug}`)
              img(src=`img/products/${product.image}` alt='')
          span.products__name= product.name
          span.products__price= `from $${product.price}`